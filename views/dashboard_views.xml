<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Kanban View for Recurring Tasks -->
    <record id="view_quality_control_recurring_task_kanban" model="ir.ui.view">
        <field name="name">quality.control.recurring.task.kanban</field>
        <field name="model">quality.control.recurring.task</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false">
                <field name="name"/>
                <field name="recurrence_type"/>
                <field name="assigned_user_ids"/>
                <field name="total_tasks_generated"/>
                <field name="last_generated_date"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <field name="name"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-clock-o"/> <field name="recurrence_type"/>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v"/>
                                    </a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <button name="action_generate_tasks_now" type="object" 
                                                class="btn btn-primary btn-sm o_kanban_manage_button_action">
                                            <i class="fa fa-play"/> Generar Tareas
                                        </button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="row">
                                    <div class="col-6 o_kanban_manage_button_section">
                                        <button class="btn btn-primary btn-sm o_kanban_manage_button_action" 
                                                name="action_view_generated_activities" type="object">
                                            Ver Tareas
                                        </button>
                                    </div>
                                    <div class="col-6 o_kanban_manage_button_section">
                                        <a class="btn btn-secondary btn-sm" type="edit">Editar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Dashboard Action for Active Tasks -->
    <record id="action_quality_control_recurring_task_dashboard" model="ir.actions.act_window">
        <field name="name">Panel de Tareas Recurrentes</field>
        <field name="res_model">quality.control.recurring.task</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="domain">[('active', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡No hay configuraciones activas!
            </p>
            <p>
                Crea una nueva configuración de tareas recurrentes para comenzar 
                a generar recordatorios automáticos para los controles de calidad.
            </p>
        </field>
    </record>

    <!-- My Activities Dashboard -->
    <record id="view_my_quality_control_activities" model="ir.ui.view">
        <field name="name">my.quality.control.activities.tree</field>
        <field name="model">mail.activity</field>
        <field name="arch" type="xml">
            <tree string="Mis Tareas de Control de Calidad" create="false" edit="false" delete="false">
                <field name="summary"/>
                <field name="date_deadline" decoration-danger="date_deadline &lt; current_date" 
                       decoration-warning="date_deadline == current_date"/>
                <field name="res_name" string="Configuración"/>
                <field name="note" optional="hide"/>
                <field name="state" invisible="1"/>
                <button name="action_done" type="object" string="Marcar como Hecho" 
                        class="btn-success" icon="fa-check" invisible="state != 'overdue'"/>
            </tree>
        </field>
    </record>

    <record id="action_my_quality_control_activities" model="ir.actions.act_window">
        <field name="name">Mis Tareas de Control de Calidad</field>
        <field name="res_model">mail.activity</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_my_quality_control_activities"/>
        <field name="domain">[
            ('user_id', '=', uid),
            ('res_model', '=', 'quality.control.recurring.task'),
            ('state', 'in', ['overdue', 'today', 'planned'])
        ]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡No tienes tareas pendientes!
            </p>
            <p>
                Aquí aparecerán las tareas de control de calidad asignadas a ti 
                por las configuraciones de tareas recurrentes.
            </p>
        </field>
    </record>
</odoo>