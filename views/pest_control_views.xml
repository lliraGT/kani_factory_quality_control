<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_quality_control_pest_control_tree" model="ir.ui.view">
        <field name="name">quality.control.pest.control.tree</field>
        <field name="model">quality.control.pest.control</field>
        <field name="arch" type="xml">
            <tree string="Control de Plagas Planta KANI">
                <field name="name"/>
                <field name="control_date"/>
                <field name="responsible_id"/>
                <field name="supervisor_id"/>
                <field name="state" decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state in ['completed','validated']"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_quality_control_pest_control_form" model="ir.ui.view">
        <field name="name">quality.control.pest.control.form</field>
        <field name="model">quality.control.pest.control</field>
        <field name="arch" type="xml">
            <form string="Control de Plagas Planta KANI">
                <header>
                    <button name="action_start_control" string="Iniciar Control" type="object" 
                            invisible="state != 'draft'" class="oe_highlight"/>
                    <button name="action_complete_control" string="Completar Control" type="object" 
                            invisible="state != 'in_progress'" class="oe_highlight"/>
                    <button name="action_validate_control" string="Validar Control" type="object" 
                            invisible="state != 'completed'" class="oe_highlight"/>
                    <button name="action_reset_to_draft" string="Resetear a Borrador" type="object" 
                            invisible="state not in ['in_progress', 'completed']" groups="base.group_system"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed,validated"/>
                </header>
                
                <sheet>
                    <!-- Header with KANI logo and improved layout -->
                    <div class="oe_title">
                        <div class="row align-items-center">
                            <div class="col-2 text-left">
                                <img src="/kani_factory_quality_control/static/src/img/kani_logo.png" 
                                     alt="KANI" style="max-height: 80px;" class="img-fluid"/>
                            </div>
                            <div class="col-8 text-center">
                                <h2 style="margin: 0; font-weight: bold;">CONTROL DE PLAGAS PLANTA KANI</h2>
                            </div>
                            <div class="col-2 text-right">
                                <div style="text-align: right;">
                                    <span class="o_form_label">Control Number:</span>
                                    <h3 style="margin: 0; color: #64b9b0;"><field name="name" readonly="1"/></h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <group>
                        <group string="Informaci칩n General">
                            <field name="control_date" required="1"/>
                        </group>
                        <group string="Personal">
                            <field name="responsible_id" required="1" options="{'no_create': True}"/>
                            <field name="supervisor_id" required="1" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <!-- Control Lines Section -->
                    <group string="Control por Ubicaci칩n">
                        <div class="oe_clear">
                            <button name="action_create_default_lines" 
                                    string="游댃 Crear L칤neas por Defecto" 
                                    type="object" 
                                    class="btn-secondary"
                                    invisible="pest_control_line_ids"
                                    help="Crea autom치ticamente las l칤neas para todas las ubicaciones est치ndar"/>
                        </div>
                        <field name="pest_control_line_ids" nolabel="1" colspan="2">
                            <tree string="L칤neas de Control" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="location" options="{'no_create': True, 'no_open': True}"/>
                                <field name="code" options="{'no_create': True, 'no_open': True}"/>
                                <field name="cleanliness_ok" widget="boolean_toggle"/>
                                <field name="trap_consumption" widget="selection"/>
                                <field name="observations" optional="show"/>
                            </tree>
                        </field>
                    </group>

                    <!-- Add spacing before tabs -->
                    <div style="margin-top: 30px;"></div>

                    <notebook>
                        <page string="Firmas Digitales" name="signatures">
                            <group>
                                <group string="Firma del Responsable">
                                    <field name="responsible_signature" widget="signature"/>
                                </group>
                                <group string="Firma del Supervisor">
                                    <field name="supervisor_signature" widget="signature"/>
                                </group>
                            </group>
                        </page>

                        <page string="Observaciones Generales" name="notes">
                            <field name="notes" placeholder="Ingrese observaciones generales adicionales sobre el control de plagas..."/>
                        </page>

                        <page string="Informaci칩n de Ubicaciones" name="location_info">
                            <div class="alert alert-info">
                                <h4><i class="fa fa-info-circle"></i> Ubicaciones Est치ndar</h4>
                                <div class="row">
                                    <div class="col-6">
                                        <p><strong>츼rea A:</strong></p>
                                        <ul>
                                            <li>A-01, A-02: Comedor</li>
                                        </ul>
                                        
                                        <p><strong>츼rea B:</strong></p>
                                        <ul>
                                            <li>B-01: Pila</li>
                                            <li>B-02: Cocina</li>
                                            <li>B-03: Ingreso IG</li>
                                            <li>B-04: Galvano IG</li>
                                            <li>B-05: Pulido IG</li>
                                            <li>B-06: Centro IG</li>
                                            <li>B-07: Moldes IG</li>
                                        </ul>
                                    </div>
                                    <div class="col-6">
                                        <p><strong>츼rea C:</strong></p>
                                        <ul>
                                            <li>C-01: Pasillo Desh</li>
                                            <li>C-02: Desh</li>
                                            <li>C-03: Taller</li>
                                        </ul>
                                        
                                        <p><strong>츼rea L:</strong></p>
                                        <ul>
                                            <li>L-01: Bodega Granos</li>
                                        </ul>
                                        
                                        <p><strong>Consumo de Trampas:</strong></p>
                                        <ul>
                                            <li><strong>SC:</strong> Sin Consumo</li>
                                            <li><strong>CC:</strong> Consumo Completo</li>
                                            <li><strong>CC+:</strong> Consumo superior al 30%</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_quality_control_pest_control_search" model="ir.ui.view">
        <field name="name">quality.control.pest.control.search</field>
        <field name="model">quality.control.pest.control</field>
        <field name="arch" type="xml">
            <search string="Buscar Controles de Plagas">
                <field name="name" string="N칰mero"/>
                <field name="responsible_id" string="Responsable"/>
                <field name="supervisor_id" string="Supervisor"/>
                <field name="control_date" string="Fecha"/>
                
                <filter string="Mis Controles" name="my_controls" domain="[('responsible_id', '=', uid)]"/>
                <filter string="Por Supervisar" name="to_supervise" domain="[('supervisor_id', '=', uid), ('state', 'in', ['completed'])]"/>
                <filter string="Hoy" name="today" domain="[('control_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Esta Semana" name="this_week" 
                        domain="[('control_date', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="En Progreso" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completado" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Validado" name="validated" domain="[('state', '=', 'validated')]"/>
                
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsable" name="group_by_responsible" context="{'group_by': 'responsible_id'}"/>
                    <filter string="Fecha" name="group_by_date" context="{'group_by': 'control_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_control_pest_control" model="ir.actions.act_window">
        <field name="name">Control de Plagas</field>
        <field name="res_model">quality.control.pest.control</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                춰Crear tu primer control de plagas!
            </p>
            <p>
                Aqu칤 puedes gestionar todos los controles de plagas de la planta KANI.
                Cada control incluye m칰ltiples ubicaciones, firmas digitales y genera reportes PDF para auditor칤as.
            </p>
            <p>
                <b>Ubicaciones incluidas:</b> Comedor, Pila, Cocina, 츼reas IG, Deshidratado, Taller, Bodega Granos
            </p>
        </field>
    </record>
</odoo>