<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job for generating recurring tasks -->
        <record id="cron_generate_recurring_tasks" model="ir.cron">
            <field name="name">Generar Tareas Recurrentes de Control de Calidad</field>
            <field name="model_id" ref="model_quality_control_recurring_task"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_tasks()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_root"/>
        </record>
    </data>
</odoo>