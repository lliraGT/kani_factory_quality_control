<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Single Raw Material Reception Report Definition -->
    <record id="action_report_quality_control_raw_material_reception_single" model="ir.actions.report">
        <field name="name">Control Individual - Recepción de Materia Prima</field>
        <field name="model">quality.control.raw.material.reception</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kani_factory_quality_control.report_quality_control_raw_material_reception_single_template</field>
        <field name="report_file">kani_factory_quality_control.report_quality_control_raw_material_reception_single_template</field>
        <field name="binding_model_id" ref="model_quality_control_raw_material_reception"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Recepcion_Materia_Prima_%s' % (object.name)</field>
    </record>

    <!-- Multiple Raw Material Reception Reports Definition -->
    <record id="action_report_quality_control_raw_material_reception_multiple" model="ir.actions.report">
        <field name="name">Controles Múltiples - Recepción de Materia Prima</field>
        <field name="model">quality.control.raw.material.reception</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">kani_factory_quality_control.report_quality_control_raw_material_reception_multiple_template</field>
        <field name="report_file">kani_factory_quality_control.report_quality_control_raw_material_reception_multiple_template</field>
        <field name="binding_model_id" ref="model_quality_control_raw_material_reception"/>
        <field name="binding_type">report</field>
        <field name="multi">True</field>
        <field name="print_report_name">'Recepciones_Multiples_%s' % (datetime.now().strftime('%Y%m%d'))</field>
    </record>
</odoo>